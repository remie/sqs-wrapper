{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "includes": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}